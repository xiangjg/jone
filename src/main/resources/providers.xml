<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
    <!-- 配置可参考 http://dubbo.io/User+Guide-zh.htm -->
    <!-- 服务提供方应用名，用于计算依赖关系 -->
    <dubbo:application name="power" owner="dubbo-provider"/>
    <!-- 定义 zookeeper 注册中心地址及协议 -->
    <dubbo:registry protocol="zookeeper" address="192.168.1.2:2181" client="zkclient"/>
    <!-- 定义 Dubbo 协议名称及使用的端口，dubbo 协议缺省端口为 20880，如果配置为 -1 或者没有配置 port，则会分配一个没有被占用的端口 -->
    <!--<dubbo:protocol name="dubbo" port="-1"/>-->
    <dubbo:protocol name="json" port="20880"/>
    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="com.cloude.water.service.LoginService" ref="loginService" timeout="20000"/>
    <!-- 和本地 bean 一样实现服务 -->
    <bean id="loginService" class="com.cloude.water.service.impl.LoginServiceImpl" />

    <!-- 站点信息 -->
    <dubbo:service interface="com.cloude.water.service.PowerStationService" ref="powerStationService" timeout="20000"/>
    <bean id="powerStationService" class="com.cloude.water.service.impl.PowerStationServiceImpl" />
    <!-- 行政区信息 -->
    <dubbo:service interface="com.cloude.water.service.AreaService" ref="areaService" timeout="20000"/>
    <bean id="areaService" class="com.cloude.water.service.impl.AreaServiceImpl" />
    <!-- 项目资料信息 -->
    <dubbo:service interface="com.cloude.water.service.FileService" ref="fileService" timeout="20000"/>
    <bean id="fileService" class="com.cloude.water.service.impl.FileServiceImpl" />
    <!-- 月报信息 -->
    <dubbo:service interface="com.cloude.water.service.ReportService" ref="reportService" timeout="20000"/>
    <bean id="reportService" class="com.cloude.water.service.impl.ReportServiceImpl" />
</beans>